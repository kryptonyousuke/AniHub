{
  "name": "anihub",
  "version": "1.0.0",
  "description": "AniHub is your anime hub :D",
  "author": {
    "name": "Krypton Yousuke",
    "email": "kryptonyousuke@gmail.com"
  },
  "homepage": "https://anihub.com",
  "main": "main.js",
  "scripts": {
    "dev": "vite --host",
    "electron": "electron .",
    "start": "npm run dev",
    "build": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.kryptonsolutions.anihub",
    "productName": "AniHub",
    "directories": {
      "buildResources": "assets",
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "./main.js",
      "preload.js",
      "package.json"
    ],
    "win": {
      "icon": "./build-icon/icons/win/icon.ico",
      "target": "portable"
    },
    "linux": {
      "icon": "./build-icon/icons/png/512x512.png",
      "category": "AudioVideo",
      "target": [
        "AppImage"
      ],
      "maintainer": "Krypton Yousuke <kryptonyousuke@gmail.com>"
    }
  },
  "keywords": [],
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.1",
    "ansi-regex": "^6.2.2",
    "concurrently": "^8.2.2",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "gauge": "^5.0.2",
    "vite": "^7.1.3",
    "vite-plugin-electron": "^0.29.0"
  },
  "dependencies": {
    "dash.js": "^3.0.1",
    "dashjs": "^5.0.3",
    "hls.js": "^1.6.11",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.11.0"
  }
}
